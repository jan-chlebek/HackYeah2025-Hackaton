# MCP Server Configuration Template
# Copy this file to .env.mcp and fill in your values
# ⚠️ DO NOT COMMIT .env.mcp to version control ⚠️

# ==============================================================================
# GitHub Integration
# ==============================================================================
# Create a personal access token at: https://github.com/settings/tokens
# Required scopes: repo, read:org, read:user
GITHUB_TOKEN=your_github_personal_access_token_here
GITHUB_REPOSITORY=HackYeah2025-Hackaton
GITHUB_OWNER=jan-chlebek

# ==============================================================================
# MCP Memory & Logging Storage
# ==============================================================================
MCP_MEMORY_PATH=.mcp/memory
MCP_LOG_PATH=.mcp/logs

# ==============================================================================
# Puppeteer Configuration (for E2E testing)
# ==============================================================================
PUPPETEER_HEADLESS=true
PUPPETEER_SLOW_MO=0
PUPPETEER_DEVTOOLS=false

# ==============================================================================
# Security Settings
# ==============================================================================
# Operations that require manual approval
MCP_REQUIRE_APPROVAL=docker,database,migration
MCP_MAX_CONTEXT_SIZE=100000

# ==============================================================================
# Database Connection (for PostgreSQL container)
# ==============================================================================
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=governance_db
POSTGRES_USER=admin
POSTGRES_PASSWORD=your_secure_postgres_password_here

# ==============================================================================
# ASP.NET Core API Configuration
# ==============================================================================
API_BASE_URL=http://localhost:5000
API_VERSION=v1

# ==============================================================================
# Angular Development Server
# ==============================================================================
ANGULAR_PORT=4200
ANGULAR_PROXY_CONFIG=proxy.conf.json
